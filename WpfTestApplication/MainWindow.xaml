<Window x:Class="WpfTestApplication.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Normal="clr-namespace:WpfShaderEffects.Normal;assembly=WpfShaderEffects"
    Title="MainWindow" MinHeight="600" MinWidth="800">
    <Grid>
      <Image Source="/WpfTestApplication;component/Images/Tulips.jpg" Stretch="UniformToFill">
         <Image.Effect>
            <Normal:BloomShaderEffect 
               BaseIntensity="0.5" 
               BaseSaturation="4" 
               BloomIntensity="0.8" 
               BloomSaturation="1"/>

         </Image.Effect>
      </Image>

   </Grid>
</Window>
