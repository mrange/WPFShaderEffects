<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ZoomRectApp="clr-namespace:ZoomRectApp"
	x:Class="ZoomRectApp.MainWindow"
	Title="MainWindow"
	Width="640" 
   Height="480"
   Name="Root"
      >
   <Window.Background>
      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
         <GradientStop Color="#FF888888" Offset="1"/>
         <GradientStop Color="#FFEEEEEE"/>
      </LinearGradientBrush>
   </Window.Background>

   <Grid>
      <ZoomRectApp:RegionOfInterest x:Name="Roi">
         <Image Source="/ZoomRectApp;component/Tulips.jpg"/>
      </ZoomRectApp:RegionOfInterest>
   </Grid>
   
</Window>